<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		addrulepath="/administrator/components/com_bigbluebutton/models/rules"
		addfieldpath="/administrator/components/com_bigbluebutton/models/fields"
		name="global_config"
		label="COM_BIGBLUEBUTTON_CONFIG_GLOBAL_LABEL"
		description="COM_BIGBLUEBUTTON_CONFIG_GLOBAL_DESC">

	<!--  Bbb_url Field. Type: Text. (joomla) -->
	<field type="text"
        
                      name="bbb_url"
        
                      label="COM_BIGBLUEBUTTON_CONFIG_BBB_URL_LABEL"
        
                      size="10"
        
                      maxlength="255"
        
                      default="http://test-install.blindsidenetworks.com/bigbluebutton/"
        
                      description="COM_BIGBLUEBUTTON_CONFIG_BBB_URL_DESCRIPTION"
        
                      class="text_area"
        
                      readonly="false"
        
                      disabled="false"
        
                      required="true"
        
                      filter="STRING"
        
                      message="COM_BIGBLUEBUTTON_CONFIG_BBB_URL_MESSAGE"
        
                      hint="COM_BIGBLUEBUTTON_CONFIG_BBB_URL_HINT"
        
                      autocomplete="on" />
	<!--  Bbb_salt Field. Type: Text. (joomla) -->
	<field type="text"
        
                      name="bbb_salt"
        
                      label="COM_BIGBLUEBUTTON_CONFIG_BBB_SALT_LABEL"
        
                      size="10"
        
                      maxlength="50"
        
                      default="8cd8ef52e8e101574e400365b55e11a6"
        
                      description="COM_BIGBLUEBUTTON_CONFIG_BBB_SALT_DESCRIPTION"
        
                      class="text_area"
        
                      readonly="false"
        
                      disabled="false"
        
                      required="true"
        
                      filter="STRING"
        
                      message="COM_BIGBLUEBUTTON_CONFIG_BBB_SALT_MESSAGE"
        
                      hint="COM_BIGBLUEBUTTON_CONFIG_BBB_SALT_HINT"
        
                      autocomplete="on" />
	<!--  Logo Field. Type: Media. (joomla) -->
	<field type="media"
        
                      name="logo"
        
                      label="COM_BIGBLUEBUTTON_CONFIG_LOGO_LABEL"
        
                      description="COM_BIGBLUEBUTTON_CONFIG_LOGO_DESCRIPTION"
        
                      directory=""
        
                      preview="false" />
	<!--  Copyright Field. Type: Text. (joomla) -->
	<field type="text"
        
                      name="copyright"
        
                      label="COM_BIGBLUEBUTTON_CONFIG_COPYRIGHT_LABEL"
        
                      size="10"
        
                      maxlength="50"
        
                      default=""
        
                      description="COM_BIGBLUEBUTTON_CONFIG_COPYRIGHT_DESCRIPTION"
        
                      class="text_area"
        
                      readonly="false"
        
                      disabled="false"
        
                      required="false"
        
                      filter="STRING"
        
                      message="COM_BIGBLUEBUTTON_CONFIG_COPYRIGHT_MESSAGE"
        
                      hint="COM_BIGBLUEBUTTON_CONFIG_COPYRIGHT_HINT"
        
                      autocomplete="on" />
		<field name="autorTitle"
			type="spacer"
			label="COM_BIGBLUEBUTTON_CONFIG_AUTHOR"
		/>
		<field name="autorName"
			type="text"
			label="COM_BIGBLUEBUTTON_CONFIG_AUTHOR_NAME_LABEL"
			description="COM_BIGBLUEBUTTON_CONFIG_AUTHOR_NAME_DESC"
			size="60"
			default="Jibon L. Costa"
			readonly="true"
			class="readonly"
		/>
		<field name="autorEmail"
			type="email"
			label="COM_BIGBLUEBUTTON_CONFIG_AUTHOR_EMAIL_LABEL"
			description="COM_BIGBLUEBUTTON_CONFIG_AUTHOR_EMAIL_DESC"
			size="60"
			default="jiboncosta57@gmail.com"
			readonly="true"
			class="readonly"
		/>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_bigbluebutton"
			section="component"
		/>
	</fieldset>
</config>